@page
@model WebApp.Pages.Inquiries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Inquiry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inquiry.InquiryId" />
            <div class="form-group">
                <label asp-for="Inquiry.Description" class="control-label"></label>
                <textarea asp-for="Inquiry.Description" class="form-control" rows="1" oninput="adjustHeight(this)"></textarea>
                <span asp-validation-for="Inquiry.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inquiry.SubmissionTime" class="control-label"></label>
                <input asp-for="Inquiry.SubmissionTime" class="form-control" />
                <span asp-validation-for="Inquiry.SubmissionTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inquiry.ResolutionDeadline" class="control-label"></label>
                <input asp-for="Inquiry.ResolutionDeadline" class="form-control" />
                <span asp-validation-for="Inquiry.ResolutionDeadline" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Inquiry.IsResolved" /> @Html.DisplayNameFor(model => model.Inquiry.IsResolved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
